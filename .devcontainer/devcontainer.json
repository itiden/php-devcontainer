{
  "name": "PHP and Mysql",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/home/wp/{{ tmplr.project_folder }}",
  // Add the IDs of extensions you want installed when the container is created.
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "felixfbecker.php-intellisense",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "wp",
  // Add commands that should run after creation
  "postCreateCommand": "{{ tmplr.post_create_command }}"
}
